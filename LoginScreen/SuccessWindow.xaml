<Window x:Class="LoginScreen.SuccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginScreen"
        mc:Ignorable="d"
        Title="SuccessWindow" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown">
    <Border Background="#111111" BorderThickness="4">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFA62E" Offset="0.1"/>
                <GradientStop Color="#F00B51" Offset="1" />
            </LinearGradientBrush>
        </Border.BorderBrush>
        <TextBlock Text="You have successfuly logged in!" Foreground="LightGoldenrodYellow" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="35" FontFamily="Comic Sans MS"/>
    </Border>
    
</Window>
